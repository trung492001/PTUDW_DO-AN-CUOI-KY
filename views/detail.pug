extends layout

block content
  div(class="container mx-auto lg:p-10")
    div(class="w-full mb-5 grid grid-cols-1 shadow-lg border-b lg:rounded lg:grid-cols-3 lg:border")
      div(class="col-span-1 lg:p-5")
        img(src=product.image alt="Seafood Deluxe" class="w-full" )
      div(class="col-span-1 p-5 lg:col-span-2 lg:border-l")
        div(class="text-2xl mb-2 md:text-3xl md:mb-6")=product.dishName
        div(class="font-bold mb-2 text-2xl text-red-600 md:text-3xl md:mb-4")=product.price + " Ä‘"
        div(class="bg-gray-100 p-2 mb-3 lg:mb-4 lg:p-6")
          div(class="font-semibold text-lg md:text-xl") Ingredients
          p(class="md:text-lg")=product.ingredient
        div(class="bg-gray-100 mb-2" style="height:1px;")
        div
          div(class="font-semibold text-lg md:text-xl mb-2") Quantity
          div(class="mb-2")
            input(class="rounded-none rounded-l text-center border bg-gray-100 border-gray-200 h-8 w-7 align-top" type="button" value="-")
            input(class="rounded-none border-t text-center border-b bg-white border-gray-200 h-8 w-8" type="number" value="1" min="1" max="5")
            input(class="rounded-none rounded-r text-center border bg-gray-100 border-gray-200 h-8 w-7 align-top" type="button" value="+")
          button(class="w-full h-10 bg-red-600 text-white font-bold lg:w-80") ADD TO CARD
    div(class="w-full mb-5 grid grid-cols-1 lg:rounded lg:grid-cols-4")
      div(class="col-span-1 p-5 border-b bg-white shadow-xl lg:col-span-3 lg:rounded lg:border")
        h5(class="text-xl font-semibold mb-3 md:text-2xl") Description
        p=product.description