doctype html

html(lang="en") 
  head
    title Dashboard

    // Required meta tags
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

    //CSS
    link(rel="stylesheet" href="style.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css")
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.8.2/css/all.css' integrity='sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay' crossorigin='anonymous')

    //JS
    script(src="dashboard.js")
  body
    div(class="flex h-screen overflow-hidden")
      div
        div(id="dashboard-sidebar-background" class="fixed inset-0 bg-gray-900 bg-opacity-30 z-40 lg:hidden lg:z-auto transition-opacity duration-200 opacity-0 pointer-events-none")
        div(id="dashboard-sidebar" class="flex flex-col absolute z-40 left-0 top-0 lg:static lg:left-auto lg:top-auto lg:translate-x-0 transform h-screen overflow-y-scroll lg:overflow-y-auto no-scrollbar w-64 flex-shrink-0 bg-gray-800 p-4 transition-all duration-200 ease-in-out")
          div(class="flex justify-between mb-10 pr-3 sm:px-2")
            button(onclick="hideDashboardSidebar()" class="lg:hidden text-gray-500 hover:text-gray-400 px-4")
              i(class="fas fa-arrow-left")
            a(href="/dashboard" class="block")
              img(src="/logo.png" class="h-10" alt="Dashboard Logo")
          div
            ul(class="mt-6 space-y-0.5")
              li(class="px-3 py-2 rounded-sm group bg-gray-900")
                a(class="block truncate transition duration-150" href="/dashboard")
                  div(class="flex items-center")
                    i(class="fas fa-chart-line h-6 w-6 inline-block align-middle text-2xl text-white")
                    span(class="text-sm font-medium ml-3 duration-200 text-white") Dashboard
              li(class="px-3 py-2 rounded-sm group")
                a(class="block truncate transition duration-150" href="/dashboard/account")
                  div(class="flex items-center")
                    i(class="fas fa-user-alt h-6 w-6 inline-block align-middle text-2xl text-gray-400 group-hover:text-white")
                    span(class="text-sm font-medium ml-3 duration-200 text-gray-400 group-hover:text-white") Accounts
              li(class="px-3 py-2 rounded-sm group")
                a(class="block truncate transition duration-150" href="/dashboard/category")
                  div(class="flex items-center")
                    i(class="fa fa-list-alt h-6 w-6 inline-block align-middle text-2xl text-gray-400 group-hover:text-white")
                    span(class="text-sm font-medium ml-3 duration-200 text-gray-400 group-hover:text-white") Categories
              li(class="px-3 py-2 rounded-sm group")
                a(class="block truncate transition duration-150" href="/dashboard/dish")
                  div(class="flex items-center")
                    i(class="fas fa-utensils h-6 w-6 inline-block align-middle text-2xl text-gray-400 group-hover:text-white")
                    span(class="text-sm font-medium ml-3 duration-200 text-gray-400 group-hover:text-white") Dishes
            
      div(class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden")
        header(class="sticky top-0 bg-white border-b border-gray-200 z-30")
          div(class="px-4 sm:px-6 lg:px-8")
            div(class="flex items-center justify-between h-16")
              div(class="flex")
                button(onclick="showDashboardSidebar()" class="text-gray-500 hover:text-gray-600 lg:hidden")
                  i(class="fas fa-bars")
              div(class="flex items-center")
                div(class="relative inline-flex")
                  button(onclick="toggleDashboardDropdown()" class="inline-flex justify-center items-center group")
                    img(class="w-8 h-8 rounded-full" src="https://via.placeholder.com/150")
                    div(class="flex items-center")
                      span(class="ml-2 text-sm font-medium group-hover:text-gray-800 truncate") Adminnnn
                      i(class="fas fa-angle-down w-3 h-3 flex flex-shrink-0 text-gray-400 ml-1")
                  div(id="dashboard-dropdown-main" class="absolute top-full right-0 bg-white border border-gray-200 py-1.5 rounded shadow-lg overflow-hidden mt-1 origin-top transition ease-out duration-200 transform opacity-0 -translate-y-2" style="min-width: 11rem")
                    div
                      div(class="pt-0.5 pb-2 px-3 mb-1 border-b border-gray-200")
                        div(class="font-medium text-gray-800") Adminnnn
                        div(class="text-xs text-gray-500 italic") Staff
                      ul
                        li
                          a(class="font-medium text-sm text-indigo-500 hover:text-indigo-600 flex items-center py-1 px-3" href="/") Back to Home
                        li
                          a(class="font-medium text-sm text-indigo-500 hover:text-indigo-600 flex items-center py-1 px-3" href="/logout") Logout
        main
          div(class="px-4 sm:px-6 lg:px-8 py-8 w-full")
            block content

                    
                  