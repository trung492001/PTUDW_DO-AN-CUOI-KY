    //Slideshow
    div(class="carousel")
        div(class="carousel-inner")
            input(class="carousel-open" type="radio" id="carousel-1" name="carousel" aria-hidden="true" hidden="" checked="checked")
            div(class="carousel-item" style="background-image: url('slider-bg.jpg');")
                div(class="text-white carousel-content text-center")
                    h2(class="font-light text-5xl") Perfect
                    p(class="text-xl") Fresh out of the oven
            input(class="carousel-open" type="radio" id="carousel-2" name="carousel" aria-hidden="true" hidden="")
            div(class="carousel-item" style="background-image: url('slider-bg1.jpg');")
                div(class="text-white carousel-content text-center")
                    h2(class="font-light text-5xl") Real
                    p(class="text-xl") Bite into tender juicy goodness
            input(class="carousel-open" type="radio" id="carousel-3" name="carousel" aria-hidden="true" hidden="")
            div(class="carousel-item" style="background-image: url('slider-bg2.jpg');")
                div(class="text-white carousel-content text-center")
                    h2(class="font-light text-5xl") Tasty
                    p(class="text-xl") All the flavor, not on your dreams.
            label(for="carousel-3" class="carousel-control prev control-1") <i class="fas fa-angle-left"></i>
            label(for="carousel-2" class="carousel-control next control-1") <i class="fas fa-angle-right"></i>
            label(for="carousel-1" class="carousel-control prev control-2") <i class="fas fa-angle-left"></i>
            label(for="carousel-3" class="carousel-control next control-2") <i class="fas fa-angle-right"></i>
            label(for="carousel-2" class="carousel-control prev control-3") <i class="fas fa-angle-left"></i>
            label(for="carousel-1" class="carousel-control next control-3") <i class="fas fa-angle-right"></i>
            ol(class="carousel-indicators")
                li
                    label(for="carousel-1" class="carousel-bullet") <i class="fas fa-circle text-sm "></i>
                li
                    label(for="carousel-2" class="carousel-bullet") <i class="fas fa-circle text-sm"></i>
                li
                    label(for="carousel-3" class="carousel-bullet") <i class="fas fa-circle text-sm"></i>
