extends layout
mixin productCell(name, img, number, cost, productId)
    div(class="product-cell flex flex-col w-1/2 md:w-1/3 lg:w-1/5 border ease-in duration-200 hover:shadow-lg")
        div(class="px-2 pt-2 md:px-4 md:pt-4 mb-2")
            a(href="/detailLaptop?productId="+productId)
                div(class="aspect-square flex content-center")
                    img(class="transform hover:-translate-y-1 self-center" src=img alt=name)
        div(class="px-2 pb-0 md:px-4 md:pb-4")
            a(href="/detailLaptop?productId="+productId class="font-semibold text-sm md:text-base mb-1 text-body-main block leading-5")=name 
            div(class="flex items-center space-x-2 text-sm text-dark-gray mb-1 md:mb-2")
                strong=number
                span Cấu hình tùy chọn 
            div
                div(class="flex items-center space-x-1")
                    span(class="text-sm text-black leading-5") Giá từ: 
                    span(class="text-sm xl:text-lg text-red-500 leading-7 font-semibold")=cost + "₫"

mixin trademarkCell(img, id)
    div(class="m-2 flex-shrink-0" style="width:115px")
        a(href="/category?brandId="+id class="border rounded-lg inline-block w-full hover:border-blue-700")
            img(class="max-w-full" src=img)

block header 
    script(src="/javascripts/index.js" defer)
    link(rel="stylesheet" href="/styles/indexStyle.css")
block content
    div(class="flex justify-center items-center bg-gray-200 lg:bg-white mb-10")
        div(class="flex-col negative w-72 text-center hidden lg:flex")
            div(class="btn active")
                p Mừng sinh nhật Think, linh đình quà tặng!
            div(class="btn")
                p Game thêm mạnh, quà thêm yêu! 
            div(class="btn")
                p Sức mạnh vượt trội, hội tụ tinh hoa cùng MSI Modern 14 B5M
        div(class="img-slider")
            div(class="slide active")
                img(src="/images/index-header1.jpg" alt="")
            div(class="slide")
                img(src="/images/index-header3.jpg" alt="")
            div(class="slide")
                img(src="/images/index-header4.jpg" alt="")
    p(class="text-3xl font-bold") Máy tính xách tay
    div(class="relative")
        //Fillter
        div(class="flex items-center")
            div(class="w-32 text-base font-bold") Thương hiệu 
            div(style="width: calc(100% - 125px);")
                div(class=" relative flex flex-row overflow-x-auto w-full h-full" style="transform: translate3d(0px, 0px, 0px);")
                    +trademarkCell("/images/lenovo.png", 1)
                    +trademarkCell("/images/razer.png", 2)
                    +trademarkCell("/images/dell.png", 0)
                    +trademarkCell("/images/asus.png", 3)
                    +trademarkCell("/images/hp.png", 4)
                    +trademarkCell("/images/microsoft.png", 5)
                    +trademarkCell("/images/apple.png", 6)
                    +trademarkCell("/images/msi.png", 7)
                    +trademarkCell("/images/acer.png", 8)
                    +trademarkCell("/images/lg.png", 9)

        //Cost
        div(class="flex items-center my-4")
            div(class="w-32 text-base font-bold") Khoảng giá
            div(class="overflow-x-auto whitespace-nowrap pb-3" style="width: calc(100% - 125px);")
                a(href="/laptop?searchId=list2&typeId=1")
                    label(class="inline-block cursor-pointer h-10 bg-gray-300 text-center text-md leading-10 font-normal px-6 rounded mr-2 transition duration-300 hover:bg-blue-500 hover:text-white") Trên 50 triệu 
                a(href="/laptop?searchId=list2&typeId=2")
                    label(class="inline-block cursor-pointer h-10 bg-gray-300 text-center text-md leading-10 font-normal px-6 rounded mr-2 transition duration-300 hover:bg-blue-500 hover:text-white") 40 - 50 triệu 
                a(href="/laptop?searchId=list2&typeId=3")
                    label(class="inline-block cursor-pointer h-10 bg-gray-300 text-center text-md leading-10 font-normal px-6 rounded mr-2 transition duration-300 hover:bg-blue-500 hover:text-white") 30 - 40 triệu 
                a(href="/laptop?searchId=list2&typeId=4")
                    label(class="inline-block cursor-pointer h-10 bg-gray-300 text-center text-md leading-10 font-normal px-6 rounded mr-2 transition duration-300 hover:bg-blue-500 hover:text-white") 20 - 30 triệu 
                a(href="/laptop?searchId=list2&typeId=5")
                    label(class="inline-block cursor-pointer h-10 bg-gray-300 text-center text-md leading-10 font-normal px-6 rounded mr-2 transition duration-300 hover:bg-blue-500 hover:text-white") 10 - 20 triệu 
                a(href="/laptop?searchId=list2&typeId=6")
                    label(class="inline-block cursor-pointer h-10 bg-gray-300 text-center text-md leading-10 font-normal px-6 rounded mr-2 transition duration-300 hover:bg-blue-500 hover:text-white") Dưới 10 triệu 
    //List laptop
    div(class="container flex flex-wrap mx-auto mb-7")
        - var n = 0;
        each value in product
            +productCell(product[n].name, "/images/"+product[n].thumbnail[0], "2", product[n].price, product[n]._id)
            -n++ ; 
    div(class="text-center mb-7")
        a(class="border rounded-full inline-block leading-10 px-8 trnsition ease-in-out duration-300 hover:bg-blue-500 hover:text-white" href="/laptop") Xem thêm



        
        

