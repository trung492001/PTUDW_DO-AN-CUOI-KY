extends layout

block content
  div(class="w-full h-100 bg-gray-700 h-100 md:py-40 md:px-96")
    div(class="w-full grid grid-cols-1 md:grid-cols-2 gap-0 bg-white md:rounded")
      div(class="col-span-1 p-10 md:p-20 text-gray-900")
        h3(class="text-4xl text-center font-bold mb-10") Sign In
        a(href="/sign-in-staff")
          button(class="mb-3 w-full h-14 bg-blue-600 text-white text-2xl font-bold rounded-sm transition ease-in-out hover:bg-blue-500 ring-blue-400 focus:ring-4") Sign In as Staff
        div(class="mb-3 w-full" style="height: 1px; background: linear-gradient(0.25turn, #fff, #1f1f1f, #fff);")
        form(action="/login" method="POST")
          div(class="mb-4")
            label(for="email" class="text-xl font-semibold") Email
            input(type="email" name="email" class="text-xl bg-gray-200 h-14 w-full p-2 mt-1 rounded-sm") 
          div(class="mb-3")
            label(for="password" class="text-xl font-semibold") Password
            a(href="/forgot" class="text-xl font-semibold text-gray-500 ml-2") Forgot?
            input(type="password" name="password" class="text-xl bg-gray-200 h-14 w-full p-2 mt-1 rounded-sm") 
          div(class="mb-3 w-full" style="height: 1px; background: linear-gradient(0.25turn, #fff, #1f1f1f, #fff);")
          div(class="mb-3")
            input(type="submit" value="Login" class="w-full h-14 bg-red-700 text-white text-2xl font-bold rounded-sm transition ease-in-out hover:bg-red-600 ring-red-400 focus:ring-4")
          div(class="text-center")
            p(class="inline text-xl font-semibold") Don't have an account?
            a(href="/sign-up" class="text-xl font-semibold text-gray-500 ml-2") Sign Up
          
      div(class="col-span-1 hidden md:block bg-center	bg-no-repeat bg-cover" style="background-image: url('/images/login.jpg')")
