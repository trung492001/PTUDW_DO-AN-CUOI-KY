mixin breadcrumb(args)
  if (args && args.length > 0)
      ol(class="flex text-gray-900")
        each item, index in args
          if (index == args.length-1)
            li
              span= item.name
          else
            li(class=`${item.link ? "font-semibold cursor-pointer":""}`)
              if (item.link)
                a(href=item.link)
                  span= item.name
              else
                span= item.name
            li
              span(class="mx-2") /

