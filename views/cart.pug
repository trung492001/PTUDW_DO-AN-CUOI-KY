extends layout 
mixin productCart(name,img,cost,quantily)
    div(class="px-0 md:px-4 py-4 border-b border-gray-100 last:border-b-0")
        div(class="flex")
            div(class="ava mr-6 w-20 h-20 md:w-168px md:h-168px")
                a(href="")
                    img(src=img)
            div(class="flex-1 content space-y-2")
                p(class="font-default text-base md:text-xl font-semibold")
                    a(href="")=name
                div(class="font-primary text-base leading-5 md:hidden font-bold")
                    p=cost + "₫"
                div(class="text-sm leading-5")= "x" + quantily
                div(class="text-sm leading-5 text-right md:text-left")
                    a(href="") Xóa
            div(class="ml-auto hidden md:block")
                div(class="font-bold text-base text-black pr-6")
                    p=cost + "₫"
block content
    p(class='text-xl md:text-4xl leading-7 md:leading-10 text-black font-bold mb-2 md:mb-6') Giỏ hàng
    div(class="md:flex flex-wrap mb-8 md:mb-14")
        div(class="md:w-9/12")
            div(class="list-cart md:border border-gray-100")
                +productCart("Dell Inspiron 5510 (Chính hãng)","/images/may1.jpg","22.990.000","1")
                +productCart("Dell Inspiron 5510 (Chính hãng)","/images/may1.jpg","22.990.000","1")
                +productCart("Dell Inspiron 5510 (Chính hãng)","/images/may1.jpg","22.990.000","1")
        div(class="md:w-3/12 md:-ml-px")
            div(class="checkout_sidebar py-4 space-y-4 border-t md:border border-gray-100")
                div(class="flex justify-between px-0 md:px-4 border-b border-gray-100 pb-4")
                    p(class="font-bold text-sm") Tạm Tính:
                    p(class="text-base") 2.380.000 ₫
                div(class="flex justify-between items-center px-0 md:px-4 border-b border-gray-100 pb-4")
                    p(class="font-bold text-sm") Thành tiền 
                    p(class="text-lg text-red-400 font-bold") 2.380.000 ₫
                div(class="px-0 md:px-4")
                    a(href="" class="mb-4 block w-full px-8 py-3 rounded-full bg-brand text-white text-base font-bold text-center") Tiến hành đặt hàng 
                    a(href="" class="block w-full px-8 py-3 rounded-full bg-white text-gray-600 border border-gray-100 text-base font-bold text-center") Tính trả góp
                         



