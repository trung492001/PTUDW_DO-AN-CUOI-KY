extends layout

mixin foodCell(name, price, img, description)
  div(class="col-span-1 mb-6")
    a(href='/detail')  
      img(src=img alt=name class="w-full mb-3 lg:px-6")
    div(class="text-center mb-4")
      a(href='/detail')  
        h5(class="text-xl mb-2 font-bold")=name
      h4(class="text-xl lg:text-2xl font-bold text-red-600")=price+" VNƒê"
      p(class="text-sm lg:font-normal")=description

block content 
    div(class="container mx-auto px-4 lg:px-40")
      div(class="mt-12")
        h1(class="text-red-600 text-5xl font-extrabold mb-6 text-center") PIZZA
        div(class="grid grid-cols-2 lg:grid-cols-4 mb-4 gap-2")
          - var n = 0;
          each value in dishs
            +foodCell(dishs[n].dishName, dishs[n].price, dishs[n].image, dishs[n].ingredient)
            -n++ ; 
      div(class="mt-16")
        h1(class="text-red-600 text-5xl font-extrabold mb-6 text-center") SALAD
        div(class="grid grid-cols-2 lg:grid-cols-4 mb-4 gap-4")
          - var n = 0;
          each value in salads
            +foodCell(salads[n].dishName, salads[n].price, salads[n].image, salads[n].ingredient)
            -n++ ; 
      div(class="mt-16")
        h1(class="text-red-600 text-5xl font-extrabold mb-6 text-center") PASTA
        div(class="grid grid-cols-2 lg:grid-cols-4 mb-4 gap-4")
          - var n = 0;
          each value in pasta
            +foodCell(pasta[n].dishName, pasta[n].price, pasta[n].image, pasta[n].ingredient)
            -n++ ; 

